<h1>EMPLOYEES</h1>

<% if @employees.any?() %>
  <h3>Here are all of your employees:</h3>

  <ul>
    <% @employees.each() do |employee| %>
      <li><%= employee.name %> <a href="/employees/<%= employee.id() %>/edit">View or update</a></li>
    <% end %>
  </ul>

<% else %>
  <h3>There are no employees yet!</h3>

<% end %>

<h3>Add employee:</h3>

<form action="/employees" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input class="form-control" type="text" name="name" id="name">

    <label for="gender">Gender:</label>
    <input class="form-control" type="text" name="gender" id="gender">

    <label for="age">Age:</label>
    <input class="form-control" type="text" name="age" id="age">
    <br>

    <label for="division_id">Division:</label>
    <select id="division_id" name="division_id" type="text">
      <% @divisions.each() do |division| %>
        <option value="<%= division.id %>"><%= division.name() %></option>
      <% end %>
    </select>
    <br>

    <button type="submit" class="btn btn-primary">Add employee</button>
  </div>
</form>


<h6><a href="/">Back Home</a></h6>
